# Python base image
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

# Install poetry
RUN curl -sSL https://install.python-poetry.org | python3 -

# Set the working directory
WORKDIR /app

# Add poetry to PATH
ENV PATH="/root/.local/bin:${PATH}"

# Copy dependency definitions (poetry.lock may not exist)
COPY pyproject.toml ./
COPY poetry.lock* ./

# Install dependencies, including all optional groups
# Generate lock file if it doesn't exist
RUN poetry config virtualenvs.create false && \
    poetry lock --no-update 2>/dev/null || true && \
    poetry install --with server,client,dev --no-root

# Copy the rest of the application code
COPY . .

# Default command (can be overridden by docker-compose)
CMD ["uvicorn", "server.src.main:app", "--host", "0.0.0.0", "--port", "8000"]
